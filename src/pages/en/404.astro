---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Page Not Found - Elizon Rodriguez" description="The page you are looking for could not be found.">
  <main class="min-h-screen flex items-center justify-center bg-[#0d1117] text-white">
    <div class="text-center">
      <h1 class="text-6xl font-bold mb-4">404</h1>
      <h2 class="text-2xl mb-6">Page Not Found</h2>
      <p class="text-gray-400 mb-8">The page you are looking for could not be found.</p>
      <a 
        href="/en" 
        class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-6 rounded-full transition"
      >
        Go Home
      </a>
    </div>
  </main>
</Layout>