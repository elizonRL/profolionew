---
import { getTranslations } from '../i18n';

const currentLocale = Astro.currentLocale || 'es';
const t = getTranslations(currentLocale);
---

<section
  id='home'
  class='min-h-screen w-full flex gap-12 flex-col-reverse lg:flex-row items-center justify-center px-6 md:px-12 py-12 bg-[#0d1117] text-white'
>
  <!-- Texto -->

  <article class='animate-blurred-fade-in lg:w-1/4 text-center md:text-left'>
    <h1 class='text-4xl md:text-6xl font-bold mb-4'>
      <span data-i18n="hero.greeting">{t.hero.greeting}</span> <span class='text-blue-400'>Elizon</span>
    </h1>
    <p class='text-lg md:text-xl mb-6 max-w-md mx-auto md:mx-0 leading-relaxed' data-i18n="hero.description">
      {t.hero.description}
    </p>
    <div
      class='flex flex-col sm:flex-row gap-4 justify-center md:justify-start'
    >
      <a
        href={currentLocale === 'es' ? '#projects' : '/en#projects'}
        class='bg-blue-600 hover:bg-blue-700 text-white py-2 px-6 rounded-full transition'
        data-i18n-btn="projects.title"
      >
        {t.projects.title}
      </a>
      <a
        href='./cvs/Elizon_Rodriguez_cv-es.pdf'
        download='Elizon Rodriguez CV'
        class='border border-gray-300 py-2 px-6 rounded-full hover:bg-white hover:text-black transition'
        data-i18n-btn="hero.downloadCV"
      >
        {t.hero.downloadCV}
      </a>
    </div>
  </article>

  <!-- Imagen -->
  <div class='lg:w-1/4 mb-8 md:mb-0 flex flex-col justify-center items-center'>
    <img
      src='/img/elizonperfil.webp'
      alt='Avatar de Elizon'
      class='w-72 h-72 object-cover overflow-hidden rounded-full shadow-lg justify-center items-center border-4 border-blue-500'
    />

    <div class='flex flex-col items-center justify-center mt-4'>
      <span
        class='text-whitetext-gray-400 text-xl font-semibold text-center items-center'
        data-i18n="contact.contacts"
        >{t.contact.contacts}</span
      >
      <div class='flex gap-2 mt-4'>
        <a
          href='https://github.com/elizonRL'
          target='_blank'
          title='Ir a GitHub '
          class='flex size-12 rounded-full border-white border-1 justify-center items-center transition duration-150 hover:translate-y-1 hover:scale-110'
        >
          <svg
            width='20'
            height='20'
            fill='black'
          >
            <use href='/assets/sprite.svg#github'></use>
          </svg>
          <a
            href='https://www.linkedin.com/in/elizonrodriguez/'
            class='flex size-12 rounded-full border-white border-1 justify-center items-center hover:scale-110 transition duration-150 hover:translate-y-1'
            target='_blank'
            title='Ir a linkedin'
          >
            <svg
              width='20'
              height='20'
              fill='currentColor'
            >
              <use href='/assets/sprite.svg#linkedin'></use>
            </svg>
          </a>
          <a
            href='mailto:elizorodriguez16@gmail.com'
            target='_blank'
            class='flex size-12 rounded-full border-white border-1 justify-center items-center hover:scale-110 transition duration-150 hover:translate-y-1'
            title='Contactar por Gmail'
          >
            <svg
              width='20'
              height='20'
              fill='currentColor'
            >
              <use href='/assets/sprite.svg#mail'></use>
            </svg>
          </a>
        </a>
      </div>
      <svg
        class='w-8 h-8 text-blue-500 arrow-down sm:absolute bottom-10 right-1/2 z-10 hidden sm:block'
        fill='currentColor'
      >
        <use href='/assets/sprite.svg#arrow-down'></use>
      </svg>
    </div>
  </div>
</section>
