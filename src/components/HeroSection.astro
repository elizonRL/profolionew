---
import { getTranslations } from '../i18n';

const currentLocale = Astro.currentLocale || 'es';
const t = getTranslations(currentLocale);
---

<section
  id='home'
  class='min-h-screen w-full flex gap-12 flex-col-reverse lg:flex-row items-center justify-center px-6 md:px-12 py-12 pt-16 md:pt-12 bg-[#0d1117] text-white'
>
  <!-- Texto -->

  <article class='animate-blurred-fade-in lg:w-1/4 text-center md:text-left'>
    <h1 class='text-4xl md:text-6xl font-bold mb-4'>
      <span data-i18n='hero.greeting'>{t.hero.greeting}</span>
      <span class='text-blue-400'>Elizon</span>
    </h1>
    <p
      class='text-lg md:text-xl mb-6 max-w-md mx-auto md:mx-0 leading-relaxed'
      data-i18n='hero.description'
      set:html={t.hero.description}
    />
    <div
      class='flex flex-col sm:flex-row gap-4 justify-center md:justify-start'
    >
      <a
        href={currentLocale === 'es' ? '#projects' : '/en#projects'}
        class='bg-blue-600 hover:bg-blue-700 text-white py-2 px-6 rounded-full transition'
        data-i18n-btn='projects.title'
      >
        {t.projects.title}
      </a>
      <a
        href={currentLocale === 'es'
          ? '/cvs/Elizon_Rodriguez_CV_es.pdf'
          : '/cvs/Elizon_Rodriguez_CV_En.pdf'}
        download={currentLocale === 'es'
          ? 'Elizon_Rodriguez_CV_es.pdf'
          : 'Elizon_Rodriguez_CV_En.pdf'}
        class='border border-gray-300 py-2 px-6 rounded-full hover:bg-white hover:text-black transition'
        data-i18n-btn='hero.downloadCV'
      >
        {t.hero.downloadCV}
      </a>
    </div>
  </article>

  <!-- Imagen -->
  <div
    class='lg:w-1/4 mb-8 md:mb-0 flex flex-col justify-center items-center relative'
  >
    <!-- Logos animados -->
    <div class='absolute inset-0 w-72 h-72 mx-auto'>
      <svg
        class='tech-logo tech-logo-1 absolute w-10 h-10'
        fill='currentColor'
      >
        <use href='/assets/sprite.svg#react'></use>
      </svg>
      <svg
        class='tech-logo tech-logo-2 absolute w-10 h-10'
        fill='currentColor'
      >
        <use href='/assets/sprite.svg#html5'></use>
      </svg>
      <svg
        class='tech-logo tech-logo-3 absolute w-10 h-10'
        fill='currentColor'
      >
        <use href='/assets/sprite.svg#css'></use>
      </svg>
      <svg
        class='tech-logo tech-logo-4 absolute w-10 h-10'
        fill='currentColor'
      >
        <use href='/assets/sprite.svg#javascript'></use>
      </svg>
    </div>

    <img
      src='/img/elizonperfil.webp'
      alt='Avatar de Elizon'
      class='w-72 h-72 object-cover overflow-hidden rounded-full shadow-lg justify-center items-center border-4 border-blue-500 relative z-10'
    />

    <div class='flex flex-col items-center justify-center mt-4'>
      <span
        class='text-whitetext-gray-400 text-xl font-semibold text-center items-center'
        data-i18n='contact.contacts'
        >{t.contact.contacts}</span
      >
      <div class='flex gap-2 mt-4'>
        <a
          href='https://github.com/elizonRL'
          target='_blank'
          title='Ir a GitHub '
          class='flex size-12 rounded-full border-white border-1 justify-center items-center transition duration-150 hover:translate-y-1 hover:scale-110'
        >
          <svg
            width='20'
            height='20'
            fill='black'
          >
            <use href='/assets/sprite.svg#github'></use>
          </svg>
          <a
            href='https://www.linkedin.com/in/elizonrodriguez/'
            class='flex size-12 rounded-full border-white border-1 justify-center items-center hover:scale-110 transition duration-150 hover:translate-y-1'
            target='_blank'
            title='Ir a linkedin'
          >
            <svg
              width='20'
              height='20'
              fill='currentColor'
            >
              <use href='/assets/sprite.svg#linkedin'></use>
            </svg>
          </a>
          <a
            href='mailto:elizorodriguez16@gmail.com'
            target='_blank'
            class='flex size-12 rounded-full border-white border-1 justify-center items-center hover:scale-110 transition duration-150 hover:translate-y-1'
            title='Contactar por Gmail'
          >
            <svg
              width='20'
              height='20'
              fill='currentColor'
            >
              <use href='/assets/sprite.svg#mail'></use>
            </svg>
          </a>
        </a>
      </div>
    </div>
  </div>

  <svg
    class='w-8 h-8 text-blue-500 arrow-down absolute bottom-10 left-1/2 transform -translate-x-1/2 z-10 hidden sm:block'
    fill='currentColor'
  >
    <use href='/assets/sprite.svg#arrow-down'></use>
  </svg>
</section>

<style>
  .tech-logo {
    opacity: 0;
    transform: scale(0) rotate(0deg);
    animation: logoFloat 2s ease-out forwards;
  }

  .tech-logo.floating {
    animation:
      logoFloat 2s ease-out forwards,
      continuousFloat 3s ease-in-out infinite 2s;
  }

  .tech-logo-1 {
    top: -5%;
    right: -5%;
    animation-delay: 0.5s;
    z-index: 1;
  }

  .tech-logo-2 {
    top: 35%;
    left: -15%;
    animation-delay: 0.8s;
    z-index: 1;
  }

  .tech-logo-3 {
    bottom: 35%;
    right: -15%;
    animation-delay: 1.1s;
    z-index: 1;
  }

  .tech-logo-4 {
    bottom: -5%;
    left: -5%;
    animation-delay: 1.4s;
    z-index: 1;
  }

  @keyframes logoFloat {
    0% {
      opacity: 0;
      transform: scale(0) rotate(-180deg) translateY(50px);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.2) rotate(-90deg) translateY(-10px);
    }
    100% {
      opacity: 1;
      transform: scale(1) rotate(0deg) translateY(0);
    }
  }

  .tech-logo:hover {
    transform: scale(1.1) rotate(5deg);
    transition: transform 0.3s ease;
  }

  .tech-logo:after {
    content: '';
    position: absolute;
    inset: -2px;
    border-radius: 50%;
    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.1);
    z-index: -1;
  }

  .tech-logo-1 {
    animation:
      logoFloat 2s ease-out forwards,
      continuousFloat1 3s ease-in-out infinite 2s;
  }
  .tech-logo-2 {
    animation:
      logoFloat 2s ease-out forwards,
      continuousFloat2 3.5s ease-in-out infinite 2s;
  }
  .tech-logo-3 {
    animation:
      logoFloat 2s ease-out forwards,
      continuousFloat3 4s ease-in-out infinite 2s;
  }
  .tech-logo-4 {
    animation:
      logoFloat 2s ease-out forwards,
      continuousFloat4 3.2s ease-in-out infinite 2s;
  }

  @keyframes continuousFloat1 {
    0%,
    100% {
      transform: scale(1) rotate(0deg) translateY(0px);
    }
    50% {
      transform: scale(1) rotate(2deg) translateY(-8px);
    }
  }

  @keyframes continuousFloat2 {
    0%,
    100% {
      transform: scale(1) rotate(0deg) translateY(0px);
    }
    50% {
      transform: scale(1) rotate(-2deg) translateY(-6px);
    }
  }

  @keyframes continuousFloat3 {
    0%,
    100% {
      transform: scale(1) rotate(0deg) translateY(0px);
    }
    50% {
      transform: scale(1) rotate(1deg) translateY(-10px);
    }
  }

  @keyframes continuousFloat4 {
    0%,
    100% {
      transform: scale(1) rotate(0deg) translateY(0px);
    }
    50% {
      transform: scale(1) rotate(-1deg) translateY(-7px);
    }
  }
</style>
