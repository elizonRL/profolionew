---
import TitleHeader from './TitleHeader.astro';
import Tailwind from './icons/Tailwind.astro';
import Next from './icons/Next.astro';
import AstroIcon from './icons/AstroIcon.astro';
import Angular from './icons/Angular.astro';
import Ionic from './icons/Ionic.astro';
import GitHub from './icons/GitHub.astro';
import LinkButton from './LinkButton.astro';
import Link from './icons/Link.astro';
const TAGS = {
  NEXT: {
    name: 'Next.js',
    class: 'bg-black text-white',
    icon: Next, // You can import an icon component here if needed
  },
  TAILWIND: {
    name: 'Tailwind CSS',
    class: 'bg-[#003159] text-white',
    icon: Tailwind,
  },
  ASTROICON: {
    name: 'Astro',
    class: 'bg-[#FF5D01] text-white',
    icon: AstroIcon, // Assuming you have an Astro icon component
  },
  Angular: {
    name: 'Angular',
    class: 'bg-red-600 text-white',
    icon: Angular, // Assuming you have an Angular icon component
  },
  IONIC: {
    name: 'Ionic',
    class: 'bg-[#3880ff] text-white',
    icon: Ionic,
  },
};
const PROJECTS = [
  {
    title: 'ENGLISH BLOG - UN BLOG PARA APRENDER INGL√âS',
    description:
      'Blog interactivo para aprender ingl√©s desde cero. Incluye art√≠culos y recursos gratuitos. Desarrollado con Astro y Tailwind CSS.',
    link: 'https://english-project-three.vercel.app/',
    github: 'https://github.com/elizonRL/english-blog',
    image: '/projects/englishblog.webp',
    tags: [TAGS.ASTROICON, TAGS.TAILWIND],
  },
  {
    title:
      'Egresados UASD - App movil para egresados de la Universidad ',
    description:
      'Plataforma gratuita con retos de programaci√≥n. M√°s de 1 mill√≥n de visitas en un mes. +50K retos completados. Creada desde cero con Next.js, React y Tailwind CSS.',
    
    github: 'https://github.com/ericmguzmanc/egresados-uasd',
    image: '/projects/egresados.webp',
    tags: [TAGS.Angular, TAGS.IONIC],
  },
];
const { id } = Astro.props;
---

<section
  id={id}
  class='flex flex-col w-full items-center text-white py-8 px-16 md:px-12 text-wrap'
>
<div class="max-w-5xl mx-auto px-12 md:px-16">

  <TitleHeader
    titleH2='Proyectos'
    icon='üíª'
  />

  <div class='flex flex-col gap-y-16'>
    {
      PROJECTS.map(({ image, title, description, tags, link, github }) => (
        <article class='flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0'>
          <div class='w-full md:w-1/2'>
            <div class='relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50'>
              <img
                alt='Reci√©n llegado vs 5 a√±os en Nueva Zelanda'
                class='object-cover object-top w-full h-45 transition duration-500 sm:h-4/6 md:scale-110 md:group-hover:scale-105'
                loading='lazy'
                src={image}
              />
            </div>
          </div>

          <div class='w-full md:w-1/2 md:max-w-lg '>
            <h3 class='text-2xl font-bold text-gray-800 dark:text-gray-100'>
              {title}
            </h3>
            <div class='flex flex-wrap mt-2'>
              <ul class='flex flex-row mb-2 gap-x-2'>
                {tags.map((tag) => (
                  <li>
                    <span
                      class={`flex gap-x-2 justify-center items-center rounded-full text-xs ${tag.class} py-1 px-2 `}
                    >
                      <tag.icon class='size-4' />
                      {tag.name}
                    </span>
                  </li>
                ))}
              </ul>

              <div class='mt-2 text-gray-700 dark:text-gray-400'>
                {description}
              </div>
              <footer class='flex items-end justify-start mt-4 gap-x-4'>
                {github && (
                  <LinkButton href={github}>
                    <GitHub class='size-6' />
                    Code
                  </LinkButton>
                )}
                
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )} 
              </footer>
            </div>
          </div>
        </article>
      ))
    }
  </div>
</div>
</section>
