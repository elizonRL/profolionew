---
/*Componetes utilizados*/

import TitleHeader from './TitleHeader.astro';
import SectionComponent from './SectionComponent.astro';
import DivSection from './DivSection.astro';
import SvgTag from './icons/SvgTag.astro';
import LinkButton from './LinkButton.astro';
import { getTranslations } from '../i18n';
import { PROJECTS } from '../Data/projects';

const currentLocale = Astro.currentLocale || 'es';
const t = getTranslations(currentLocale);
const { id } = Astro.props;

/*Constantes de proyectos y etiquetas*/
/*Proyectos que se muestran en la secci칩n de proyectos */
/* * Componente principal que renderiza la secci칩n de proyectos
 * Utiliza los componentes TitleHeader, SectionComponent, DivSection, SvgTag y LinkButton
 * Muestra una lista de proyectos con sus detalles, incluyendo imagen, t칤tulo, descripci칩n, etiquetas y enlaces a GitHub y vista previa.
 */
---

<SectionComponent id={id}>
  <DivSection>
    <TitleHeader
      titleH2={t.projects.title}
      icon='游눹'
      i18nKey='projects.title'
    />

    <div class='flex flex-col gap-y-16'>
      {
        PROJECTS.map((project) => {
          const title = currentLocale === 'es' ? project.title_es : project.title_en;
          const description = currentLocale === 'es' ? project.descrition_es : project.descrition_en;
          
          return (
          <article class='fadeUp flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0'>
            <div class='w-full md:w-1/2  '>
              <div class='relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50'>
                <img
                  alt={title}
                  class='object-cover object-top w-full h-45 transition duration-500 sm:h-4/6 md:scale-110 md:group-hover:scale-105'
                  loading='lazy'
                  src={project.image}
                  transition:name={`project-image-${project.slug}`}
                />
              </div>
            </div>

            <div class='w-full md:w-1/2 md:max-w-lg '>
              <h3
                class='text-2xl font-bold text-gray-800 dark:text-gray-100'
                data-project-title
                transition:name={`project-title-${project.slug}`}
              >
                {title}
              </h3>
              <div class='flex flex-wrap mt-2'>
                <ul class="grid grid-cols-2 md:grid-cols-3 gap-2">
                  {tags.map((tag) => (
                    <li>
                      <span
                        class={`flex gap-x-2 justify-center items-center rounded-full text-xs ${tag.class} py-1 px-2 `}
                      >
                        <tag.icon
                          nameTag={tag.tagIcon}
                          class='size-4'
                        />
                        {tag.name}
                      </span>
                    </li>
                  ))}
                </ul>

                <div
                  class='mt-2 text-gray-700 dark:text-gray-400'
                  data-project-description
                >
                  {description}
                  <div class="mt-4">
                    <a 
                      href={currentLocale === 'es' ? `/pojects/${project.slug}` : `/en/pojects/${project.slug}`} 
                      class="inline-flex items-center gap-1 text-blue-400 hover:text-blue-300 font-medium transition-all duration-300 group relative"
                      data-i18n-btn="projects.viewMore"
                    >
                      <span class="relative">
                        {currentLocale === 'es' ? 'Ver m치s' : 'See more'}
                        <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-400 to-purple-400 transition-all duration-300 group-hover:w-full"></span>
                      </span>
                      <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                      </svg>
                    </a>
                  </div>
                </div>
                <footer class='flex items-end justify-start mt-4 gap-x-4'>
                  {project.github && (
                    <LinkButton href={project.github}>
                      <SvgTag
                        nameTag='github'
                        class='size-6'
                      />
                      <span data-i18n-btn='projects.viewCode'>
                        {t.projects.viewCode}
                      </span>
                    </LinkButton>
                  )}

                  {project.link && (
                    <LinkButton href={project.link}>
                      <SvgTag
                        nameTag='link'
                        class='size-6'
                      />
                      <span data-i18n-btn='projects.viewProject'>
                        {t.projects.viewProject}
                      </span>
                    </LinkButton>
                  )}
                </footer>
              </div>
            </div>
          </article>
          );
        })
      }
    </div>
  </DivSection>
</SectionComponent>
