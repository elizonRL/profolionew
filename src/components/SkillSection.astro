---
import SectionComponent from "./SectionComponent.astro";
import TitleHeader from "./TitleHeader.astro";
import DivSection from "./DivSection.astro";
import GithubStats from "./reactComponents/GithubStats";
import TechSkill from "./TechSkill.astro";
import { getTranslations } from '../i18n';

const currentLocale = Astro.currentLocale || 'es';
const t = getTranslations(currentLocale);
const techStack = [
  { name: "JavaScript", icon: "javascript" },
  { name: "React", icon: "react" },
  { name: "Node.js", icon: "node" },
  { name: "Python", icon: "python" },
  { name: "HTML5", icon: "html5" },
  { name: "Tailwind CSS", icon: "tailwindcss" },
  { name: "GitHub", icon: "github" },
  { name: "css", icon: "css" },
  { name: "TypeScript", icon: "typescript" },
  { name: "Git", icon: "git" },
  { name: "Astro", icon: "astro" },
  { name: "Java", icon: "java" },
  {name: "Angular", icon:"angularColor"},
  {name: "Ionic", icon:"ionicColor"},
  { name: "Vue.js", icon: "vue" },
  { name: "MongoDB", icon: "mongodb" },
  { name: "MySQL", icon: "mysql" },
  { name: "Vite", icon: "vite" },
  
];
---

<SectionComponent id="skills">
  <DivSection>
    <TitleHeader titleH2={t.skills.title} icon="ðŸ› ï¸" i18nKey="skills.title" />
    <article class="w-full">
      <aside>
        <GithubStats client:visible />
        <p class="text-gray-600 dark:text-gray-400 mt-4" data-i18n="skills.description">
          {t.skills.description}
        </p>
      </aside>
      <aside class="mt-4">
        <h3 class="font-bold text-3xl md:text-4xl" data-i18n="skills.techStack">{t.skills.techStack}</h3>
        <TechSkill techStack={techStack} />
      </aside>
    </article>
  </DivSection>
</SectionComponent>
