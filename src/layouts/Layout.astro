---
import '../styles/global.css';
const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<link
			rel='icon'
			type='image/svg+xml'
			href='/favicon.svg'
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<title>{title}</title>
	</head>
	<body >
		<slot />
	</body>
</html>

<style>
	@reference "../styles/global.css";
	html,
	body {
		
		margin: 0;
		width: 100%;
		height: 100%;
		@apply container m-auto bg-gradient-to-b from-sky-600 via-5% via-sky-200 to-sky-300;
	}
</style>
