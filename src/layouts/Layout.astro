---
import '../styles/global.css';
const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<link
			rel='icon'
			type='image/svg+xml'
			href='/favicon.svg'
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<title>{title}</title>
	</head>
	<body >
			<slot />
	</body>
</html>

<style>
	@reference "../styles/global.css";
	html,
	body {
		color: white;
		
		margin: 0;
		width: 100%;
		height: 100%;
		@apply m-auto bg-gradient-to-bl from-accent via-35% via-secondary to-background;
	}
</style>
